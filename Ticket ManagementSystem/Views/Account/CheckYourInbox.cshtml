
@{
    ViewData["Title"] = "CheckYourInbox";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h4 class="mb-3 text-success">
                        <i class="bi bi-envelope-check-fill me-2"></i>
                        Check Your Inbox
                    </h4>
                    <p class="lead">If the email you provided is registered, you’ll receive a password reset link shortly.</p>
                    <p>Please check your email inbox (or spam folder).</p>

                    <a href="https://mail.google.com" target="_blank" class="btn btn-primary rounded-pill mt-3 px-4">
                        Go to Gmail
                    </a>

                    <div class="mt-4">
                        <a asp-action="Login" asp-controller="Account" class="text-muted">
                            Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

