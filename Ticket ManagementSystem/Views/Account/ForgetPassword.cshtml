
@model ForgetPassword
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h4 class="mb-4 text-center text-primary">Forgot Your Password?</h4>

                    <form asp-action="ForgetPassword" method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.Email" class="form-label">Email Address</label>
                            <input asp-for="@Model.Email" class="form-control" type="email" required />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Send Reset Link</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Login" asp-controller="Account">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


