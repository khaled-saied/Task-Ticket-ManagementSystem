@model int
@{
    ViewData["Title"] = "AccessDenied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center shadow-sm p-4">
        <h4><i class="bi bi-shield-lock-fill me-2"></i> Access Denied</h4>
        <p class="lead">You do not have permission to perform this action.</p>
        <a asp-action="Details" asp-controller="Ticket" asp-route-id="@Model" class="btn btn-outline-primary mt-3">
            ← Back to Tickets
        </a>
    </div>
</div>

