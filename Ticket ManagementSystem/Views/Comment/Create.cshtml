@model CreateCommentDto

@{
    ViewData["Title"] = "Create";
    Layout = ViewBag.Layout as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <h4 class="mb-4 text-primary">
                        ✍️ Write a Comment
                    </h4>

                    <form asp-action="Create" asp-route-ticketId="@ViewBag.TicketId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3 d-flex align-items-start">
                            <img src="https://ui-avatars.com/api/?name=User&background=0D8ABC&color=fff"
                                 class="rounded-circle me-3"
                                 style="width: 50px; height: 50px;" alt="User" />

                            <textarea asp-for="Content"
                                      class="form-control rounded-4 shadow-sm p-3"
                                      rows="4"
                                      placeholder="What's on your mind?"
                                      style="resize: none;"></textarea>
                        </div>

                        <span asp-validation-for="Content" class="text-danger"></span>


                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">
                                <i class="bi bi-send"></i> Post Comment
                            </button>
                            <a asp-action="Index" asp-controller="Comment" class="btn btn-secondary">← Back to Comments</a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
