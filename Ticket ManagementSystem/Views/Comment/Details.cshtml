@model CommentDetailsDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4"><i class="bi bi-chat-left-text"></i> Comment #@Model.Id</h2>

            <dl class="row">
                <dt class="col-sm-3">Content</dt>
                <dd class="col-sm-9">@Model.Content</dd>

                <dt class="col-sm-3">UserName</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMM yyyy hh:mm tt")</dd>

                <dt class="col-sm-3">Ticket</dt>
                <dd class="col-sm-9">
                    @if (Model.TicketDto != null)
                    {
                        <div class="card border-0 bg-light shadow-sm p-3">
                            <h5 class="mb-1">@Model.TicketDto.Title</h5>
                            <p class="mb-2 text-muted">Ticket ID: @Model.TicketDto.Id</p>
                            <span class="badge bg-@(Model.TicketDto.Status == "Open" ? "info" : Model.TicketDto.Status == "Closed" ? "secondary" : "warning")">
                                @Model.TicketDto.Status
                            </span>
                            <div class="mt-2">
                                <a asp-controller="Ticket"
                                   asp-action="Details"
                                   asp-route-id="@Model.TicketDto.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    View Ticket
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">No ticket linked</span>
                    }
                </dd>
            </dl>


            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Details" asp-controller="Ticket" asp-route-id="@Model.TicketDto.Id" class="btn btn-secondary">← Back to Ticket</a>

                <div>
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <form asp-action="Delete"
                          asp-route-id="@Model.Id"
                          method="post"
                          onsubmit="return confirm('Are you sure you want to delete this comment?');"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>
