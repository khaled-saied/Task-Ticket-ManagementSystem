@model IEnumerable<CommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">💬 Comments</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill">
            <i class="bi bi-plus-circle"></i> Add Comment
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var comment in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="~/Files/Images/@comment.ImageName" alt="User Image"
                                     class="rounded-circle me-3 border" style="width: 50px; height: 50px; object-fit: cover;" />
                                <h5 class="mb-0 text-primary">#@comment.Id</h5>
                            </div>
                            <p class="card-text">@comment.Content</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@comment.Id" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@comment.Id" class="btn btn-sm btn-warning text-white">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@comment.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4 text-center shadow-sm">
            <i class="bi bi-info-circle"></i> No comments available.
        </div>
    }
</div>
