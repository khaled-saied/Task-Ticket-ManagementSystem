@using Ticket_ManagementSystem.ViewModels.HomeViewModel
@model List<ProjectOverviewViewModel>

@{
    ViewData["Title"] = "Projects";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h1 class="mb-4">Projects Overview</h1>

    @foreach (var project in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h3 class="card-title">@project.Project.Name</h3>
                <p class="card-text text-muted">@project.Project.Description</p>

                @if (project.Tasks.Any())
                {
                    @foreach (var taskGroup in project.Tasks)
                    {
                        <div class="card mb-3 ms-3">
                            <div class="card-body">
                                <h5 class="card-title">Task: @taskGroup.Task.Title</h5>
                                <p>Status: <strong>@taskGroup.Task.Status</strong></p>
                                <span class="badge bg-@(taskGroup.Task.IsOverdue ? "danger" : taskGroup.Task.IsDueSoon ? "warning" : "success")">
                                    @(taskGroup.Task.IsOverdue ? "Overdue" : taskGroup.Task.IsDueSoon ? "Due Soon" : "On Track")
                                </span>

                                @if (taskGroup.Tickets.Any())
                                {
                                    <div class="mt-3">
                                        @foreach (var ticketGroup in taskGroup.Tickets)
                                        {
                                            <div class="card mb-2">
                                                <div class="card-body">
                                                    <h6 class="card-subtitle mb-2 text-primary">
                                                        Ticket: @ticketGroup.Ticket.Title (@ticketGroup.Ticket.Status)
                                                    </h6>

                                                    @if (ticketGroup.Comments.Any())
                                                    {
                                                        <ul class="list-unstyled mt-2">
                                                            @foreach (var comment in ticketGroup.Comments)
                                                            {
                                                                <li class="d-flex align-items-center mb-2">
                                                                    <img src="~/Files/Images/@comment.ImageName"
                                                                         class="rounded-circle me-2"
                                                                         style="width:40px; height:40px; object-fit:cover;" />
                                                                    <span>@comment.Content</span>
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted">No comments</p>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted mt-2">No tickets for this task</p>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No tasks for this project</p>
                }
            </div>
        </div>
    }
</div>
