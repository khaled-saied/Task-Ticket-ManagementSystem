@model List<UsersInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var RoleId = ViewData["RoleName"] as string;
}




<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-people-fill"></i> Manage Users in Role</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Roles
            </a>
        </div>
        <form asp-action="AddOrRemoveUserRole" method="post" asp-route-roleId="@RoleId" >
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>User Name</th>
                                    <th>In Role?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            @Model[i].UserName
                                            <input type="hidden" asp-for="@Model[i].UserId" />
                                            <input type="hidden" asp-for="@Model[i].UserName" />
                                        </td>
                                        <td>
                                            <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsSelected" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No users available.</p>
                }
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Edit" asp-route-Id="@RoleId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
				</a>
            </div>
        </form>
    </div>
</div>

