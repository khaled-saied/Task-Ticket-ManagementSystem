<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ticket_ManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3" style="width: 220px; min-height: 100vh;">
            <h5 class="text-white mb-4">Admin Panel</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house-door-fill me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Role" asp-action="Index">
                        <i class="bi bi-person-circle me-2"></i> Roles
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i> Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Project" asp-action="Index">
                        <i class="bi bi-kanban-fill me-2"></i> Projects
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Comment" asp-action="Index">
                        <i class="fa-solid fa-comments me-2"></i> Comments
                    </a>
                </li>

            </ul>
        </nav>

        <!-- Main Content with Top Navbar -->
        <div class="flex-grow-1">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4">
                <div class="container-fluid">
                    <span class="navbar-brand fw-bold">Dashboard</span>
                    <div class="d-flex ms-auto align-items-center gap-3">
                        <span class="text-muted">Hello, @User.Identity?.Name</span>
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>


	<!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- -->
</body>
</html>
