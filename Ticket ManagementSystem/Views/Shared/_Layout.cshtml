@inject UserManager<ApplicationUser> _userManager
@{
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var user = await _userManager.FindByIdAsync(userId);
    var imageName = user?.ImageName ?? "staticImage.jpeg";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticket Management System</title>

    <!-- Bootstrap CSS & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ticket_ManagementSystem.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Ticket System</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Project" asp-action="Index">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Task" asp-action="Index">Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ticket" asp-action="Index">Tickets</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto gap-2">
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                </a>
                            </li>
                        }

                        <li class="nav-item d-flex align-items-center gap-3">
                            <!-- صورة المستخدم كـ رابط -->
                            <a asp-action="Details" asp-controller="User" asp-route-id="@userId" asp-route-returnTo="_Layout">
                                <img src="~/Files/Images/@imageName"
                                     class="rounded-circle border"
                                     alt="Profile"
                                     style="width: 40px; height: 40px; object-fit: cover;" />
                            </a>

                            <!-- الاسم -->
                            <div class="d-flex flex-column">
                                <a asp-action="Details" asp-controller="User" asp-route-id="@userId" asp-route-returnTo="_Layout"
                                   class="text-decoration-none fw-semibold text-dark small">
                                    @User.Identity?.Name
                                </a>
                                <span class="text-muted" style="font-size: 11px;">View Profile</span>
                            </div>

                            <!-- Sign Out -->
                            <a class="btn btn-outline-danger btn-sm ms-2" asp-controller="Account" asp-action="SignOut">
                                <i class="bi bi-box-arrow-right me-1"></i> Sign Out
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-fill container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto border-top text-muted py-3 bg-light">
        <div class="container text-center small">
            &copy; 2025 - Ticket Management System -
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none ms-1">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
