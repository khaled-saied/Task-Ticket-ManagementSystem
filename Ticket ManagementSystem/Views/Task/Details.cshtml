@model TaskDetailsDto

@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var returnToTicket = Context.Request.Query["returnToTicket"] == "true";
    var ticketId = Context.Request.Query["ticketId"];
}


<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">Task: @Model.Title</h2>

            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Completed" ? "success" : "warning")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Due Date</dt>
                <dd class="col-sm-9">
                    @Model.DueDate.ToString("dd MMM yyyy - hh:mm tt")
                    @if (Model.IsOverdue)
                    {
                        <span class="badge bg-danger ms-2" title="This task is overdue!">
                            ⚠️ Overdue
                        </span>
                    }
                    else if (Model.IsDueSoon)
                    {
                        <span class="badge bg-warning text-dark ms-2" title="This task is due soon!">
                            ⚠️ Due Soon
                        </span>
                    }
                </dd>

                <dt class="col-sm-3">Project</dt>
                <dd class="col-sm-9">@Model.Project?.Name</dd>
            </dl>

            <h4 class="mt-5 mb-3">Tickets</h4>

            @if (Model.Tickets != null && Model.Tickets.Any())
            {
                <table class="table table-bordered text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td>@ticket.Title</td>
                                <td>
                                    <span class="badge bg-@(ticket.Status == "Open" ? "info" : ticket.Status == "Closed" ? "secondary" : "warning")">
                                        @ticket.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-controller="Ticket" asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info rounded-pill me-1">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-controller="Ticket" asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-sm btn-warning rounded-pill me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Ticket" asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-sm btn-danger rounded-pill me-1">
                                            <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">No tickets found for this task.</div>
            }


            <div class="mt-4 d-flex justify-content-between">
                @if (returnToTicket && !string.IsNullOrEmpty(ticketId))
                {
                    <a asp-controller="Ticket" asp-action="Details" asp-route-id="@ticketId" class="btn btn-secondary">
                        ← Back to Ticket
                    </a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">← Back to Tasks</a>
                }

                <a asp-controller="Ticket" asp-action="Create" asp-route-taskId="@Model.Id" class="btn btn-primary rounded-pill">
                    <i class="bi bi-plus-circle"></i> Create Ticket
                </a>
            </div>



        </div>
    </div>
</div>
