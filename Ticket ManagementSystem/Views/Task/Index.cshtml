@using Ticket_ManagementSystem.ViewModels.ViewModelOfTask
@model TaskIndexViewModel

@{
    ViewData["Title"] = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@* Msg*@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@* *@


<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">Tasks</h2>
                <a class="btn btn-success rounded-pill px-4" asp-controller="Task" asp-action="Create">
                    <i class="bi bi-plus-circle me-1"></i> Create Task
                </a>
            </div>

            <!-- Filter -->
            <form asp-action="Index" method="get" class="mb-3 row g-2">
                <div class="col-md-4">
                    <select asp-for="StatusFilter" asp-items="Model.StatusList" class="form-select rounded-pill">
                        <option value="">-- All Statuses --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill">
                        <i class="bi bi-filter-circle"></i> Filter
                    </button>
                </div>
            </form>

            @if (!Model.Tasks.Any())
            {
                <div class="alert alert-info text-center">
                    No tasks found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover text-center align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model.Tasks)
                            {
                                <tr>
                                    <td>@task.Id</td>
                                    <td>@task.Title</td>
                                    <td>@task.Status</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-info btn-sm rounded-pill me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm rounded-pill me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal-@task.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@task.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@task.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content border-0 shadow-lg">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="deleteModalLabel-@task.Id">
                                                    Confirm Deletion
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body text-center">
                                                <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
                                                <p class="mt-3">
                                                    Are you sure you want to delete the task <strong>@task.Title</strong>?
                                                </p>
                                            </div>
                                            <div class="modal-footer justify-content-center">
                                                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                                                <form method="post" asp-action="Delete" asp-route-id="@task.Id" asp-controller="Task" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger rounded-pill px-4">
                                                        <i class="bi bi-trash-fill me-1"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
