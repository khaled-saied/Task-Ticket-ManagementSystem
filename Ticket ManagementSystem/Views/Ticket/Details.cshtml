@model TicketDetailsDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">Ticket: @Model.Title</h2>

            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Open" ? "info" : Model.Status == "Closed" ? "secondary" : "warning")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Related Task</dt>
                <dd class="col-sm-9">
                    @if (Model.Task != null)
                    {
                        <div class="card border-0 bg-light shadow-sm p-3">
                            <h5 class="mb-1">@Model.Task.Title</h5>
                            <p class="mb-2 text-muted">Task ID: @Model.Task.Id</p>
                            <a asp-controller="Task"
                               asp-action="Details"
                               asp-route-id="@Model.Task.Id"
                               asp-route-returnToTicket="true"
                               asp-route-ticketId="@Model.Id"
                               class="btn btn-sm btn-outline-primary">
                                @Model.Task.Title
                            </a>
                        </div>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">No task linked</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
                <h4 class="mb-0">Comments</h4>
                <a asp-controller="Comment"
                   asp-action="Create"
                   asp-route-ticketId="@Model.Id"
                   class="btn btn-sm btn-success rounded-pill">
                    <i class="bi bi-plus-circle"></i> Add Comment
                </a>
            </div>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-body">
                                    <h6 class="card-title text-primary mb-2">#@comment.Id</h6>
                                    <p class="card-text text-dark">@comment.Content</p>
                                </div>
                                <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2 flex-wrap">
                                    <a asp-controller="Comment"
                                       asp-action="Details"
                                       asp-route-id="@comment.Id"
                                       class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-controller="Comment"
                                       asp-action="Edit"
                                       asp-route-id="@comment.Id"
                                       class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Comment"
                                       asp-action="Delete"
                                       asp-route-id="@comment.Id"
                                       class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-4 text-center">No comments found for this ticket.</div>
            }

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">← Back to Tickets</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Ticket</a>
            </div>
        </div>
    </div>
</div>
