 
@model UpdateTicketViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">Edit Ticket</h2>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Type"></label>
                    <div>
                        @foreach (var genderOption in Enum.GetValues<TicketTypeEnum>())
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Type" value="@genderOption" />
                                <label class="form-check-label">@genderOption</label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Status"></label>
                    <div>
                        @foreach (var genderOption in Enum.GetValues<TicketStatusEnum>())
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Status" value="@genderOption" />
                                <label class="form-check-label">@genderOption</label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">← Back to Tickets</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


