
@model UserDetailsDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="card-title mb-3">
                <i class="bi bi-person-circle"></i> User Details
            </h3>
            <dl class="row">
                <dt class="col-sm-3">User Name:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">PhoneNumber:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Roles:</dt>
                <dd class="col-sm-9">
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-primary me-1">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned.</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="row mt-5">
        <!-- Comments Section -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-chat-left-text"></i> User Comments
                </div>
                <div class="card-body">
                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var comment in Model.Comments)
                            {
                                <li class="list-group-item">
                                    <strong>ID:</strong> @comment.Id <br />
                                    <strong>Content:</strong> @comment.Content
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No comments available.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Projects Section -->
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-kanban"></i> User Projects
                </div>
                <div class="card-body">
                    @if (Model.Projects != null && Model.Projects.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var project in Model.Projects)
                            {
                                <li class="list-group-item">
                                    <h6 class="mb-1">@project.Name</h6>
                                    <p class="mb-0">@project.Description</p>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No projects assigned.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>


